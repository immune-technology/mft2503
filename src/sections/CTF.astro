---
import Section from "../components/Section.astro";
import Background from "../assets/web_hacking_challenge-background.webp";
import data from "../assets/data.json";
import Image from "astro/components/Image.astro";
import CTFLogo from "../assets/icons/CTFLogo.astro";
---

<Section>
  <div class="container grid lg:grid-cols-2 gap-10 items-center">
    <div>
      <h2 class="text-5xl md:text-6xl mb-5">
        Web Hacking <span class="font-thin opacity-50">Challenge</span>
      </h2>
      {data.ctf.map((paragraph) => <p class="max-w-prose mb-4">{paragraph}</p>)}
      <button
        class="bg-red-600 py-2 px-4 cursor-pointer uppercase"
        onclick="openCTFFormModal()"
        type="button"
      >
        ¡Apúntate!
      </button>
    </div>
    <CTFLogo />
  </div>
  <Image
    src={Background}
    alt="Buscan Talento"
    class="absolute top-0 right-0 -z-10 w-full h-full object-cover"
  />
</Section>
